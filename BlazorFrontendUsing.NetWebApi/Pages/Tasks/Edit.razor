@page "/tasks/edit/{id:int}"
@inject HttpClient Http
@using BlazorFrontendUsing.NetWebApi.Models
@inject NavigationManager Navigation

<h3>Edit Task</h3>

@if (task == null)
{
    <p>Loading...</p>
}
else
{
    <div class="mb-2">
        <label>Title</label>
        <input class="form-control" @bind="task.Title" />
    </div>

    <div class="mb-2">
        <label>Description</label>
        <textarea class="form-control" @bind="task.Description"></textarea>
    </div>

    <div class="mb-2">
        <label>Due Date</label>
        <input type="date" class="form-control" @bind="task.DueDate" />
    </div>

    <div class="mb-2">
        <label>Completed</label>
        <input type="checkbox" @bind="task.IsCompleted" />
    </div>

    <button class="btn btn-success" @onclick="Save">💾 Update</button>
    <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
}

@code {
    [Parameter] public int id { get; set; }   // comes from route
    private TaskListitem? task;

    protected override async Task OnInitializedAsync()
    {
        // Load existing task
        task = await Http.GetFromJsonAsync<TaskListitem>($"https://localhost:7291/api/Task/{id}");
    }

    private async Task Save()
    {
        await Http.PutAsJsonAsync($"https://localhost:7291/api/Task/{task.Id}", task);
        Navigation.NavigateTo("/tasks");  // go back to list
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/tasks");
    }
}
